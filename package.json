{
  "name": "medical-image-renderer-poc",
  "version": "1.0.0",
  "description": "PoC for high-performance medical image rendering at 30+ FPS",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build-backend": "cd backend && dotnet publish -c Release -o bin/Release/net8.0/publish",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build-electron": "npm run build && npm run build-backend && electron-builder",
    "start-backend": "cd backend && dotnet run",
    "dev-full": "concurrently \"npm run start-backend\" \"npm run electron-dev\" --names \"backend,electron\" --prefix-colors \"blue,green\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0"
  },
  "homepage": "./",
  "author": "Medical Device Team",
  "license": "MIT",
  "build": {
    "appId": "com.medical.image-renderer",
    "productName": "Medical Image Renderer PoC",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/electron/main.js",
      "dist/*.html",
      "dist/assets/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/bin/Release/net8.0/publish",
        "to": "backend"
      }
    ],
    "win": {
      "target": "dir"
    },
    "nsis": false
  }
}
